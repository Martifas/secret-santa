{
  "extends": "./tsconfig.json",
  "include": ["src/**/*.ts"],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "tests/**/*.ts",
    "**/tests/**/*.ts",
    "__tests__/**/*.ts",
    "**/__tests__/**/*.ts",
    "vitest.config.ts"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": false,
    "removeComments": true,
    "paths": {
      "@server/*": ["./src/*"]
    },
    "declaration": true,
    "declarationMap": true
  }
}
